{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "public",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["./api/**/*", "./lib/**/*"],
	"exclude": ["node_modules"]
}
